{# templates/user/list.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1>User List</h1>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark" style="text-align:center">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Job</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.job }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.phoneNumber }}</td>
                        <td>
                            <a href="{{ path('user_details', {id: user.id}) }}" class="btn btn-info btn-sm">Details</a>
                            <a href="{{ path('user_delete', {id: user.id}) }}" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('user_add') }}" class="btn btn-primary">Add New User</a>
    </div>
{% endblock %}
